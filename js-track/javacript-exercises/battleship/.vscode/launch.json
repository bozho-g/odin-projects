{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Jest (ESM)",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--inspect-brk",
                "--experimental-vm-modules",
                "${workspaceFolder}/node_modules/jest/bin/jest.js",
                "--runInBand"
            ],
            "args": [],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "cwd": "${workspaceFolder}"
        }
    ],
    "inputs": [
        {
            "id": "testName",
            "type": "promptString",
            "description": "Regex for test name (or leave blank to run all)",
            "default": ""
        }
    ]
}